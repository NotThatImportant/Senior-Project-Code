<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <TextView android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_height="wrap_content" android:layout_gravity="center" android:id="@+id/faction_selection" android:text="@string/faction_selection_title"></TextView>
    <TextView android:layout_width="wrap_content" android:layout_gravity="center" android:layout_height="wrap_content" android:id="@+id/faction_selection_description" android:text="@string/faction_selection_description"></TextView>
    <Spinner android:layout_height="wrap_content" android:layout_width="250dp" android:layout_gravity="center" android:id="@+id/faction_selection_list"></Spinner>
    <Button android:layout_gravity="center" android:layout_height="wrap_content" android:layout_width="250dp" android:id="@+id/select_faction" android:text="@string/faction_selection_button"></Button>
    
</LinearLayout>
